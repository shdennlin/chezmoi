{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

# Define color codes
NC="\033[0m"
INFO="\033[1;32m"      # Green
WARNING="\033[1;33m"   # Yellow
ERROR="\033[1;31m"     # Red
DEBUG="\033[1;34m"     # Blue
FATAL="\033[1;41m"     # Red background
HIGHLIGHT="\033[1;36m" # Cyan
CMD="\033[1;90m"       # Gray
SUCCESS="\033[1;92m"   # Bright Green

set -eu

if ! command -v brew >/dev/null; then
  echo -e "${WARNING}You need to install Homebrew first.  Please visit ${NC}https://brew.sh/${WARNING} for installation instructions.
Or run the following command to install Homebrew:${NC}"
  echo -e "${HIGHLIGHT}/bin/bash -c \"\$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)\"${NC}"
  exit 1
fi

{{ if eq .applyNeovim true}}
if ! command -v nvim >/dev/null; then
  echo -e "${WARNING}You need to install Neovim first. Please run the following command to install Neovim:${NC}"
  echo -e "${HIGHLIGHT}brew install neovim${NC}"
  exit 1
fi
if ! command -v git >/dev/null; then
  echo -e "${WARNING}You need to install Git first. Please run the following command to install Git:${NC}"
  echo -e "${HIGHLIGHT}brew install git${NC}"
  exit 1
fi
{{ end -}}

{{ end -}}